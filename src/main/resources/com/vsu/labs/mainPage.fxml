<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            onMouseDragged="#dragged" onMousePressed="#pressed" prefHeight="450.0" prefWidth="600.0"
            style="-fx-background-color: #2c4423; -fx-text-fill: white;" stylesheets="@application.css"
            xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.vsu.labs.VSULabsController">
    <center>
        <AnchorPane maxHeight="-Infinity" minHeight="-Infinity" prefHeight="294.0" prefWidth="600.0"
                    BorderPane.alignment="BOTTOM_CENTER">
            <Pane fx:id="paneMain" layoutX="-1.0" layoutY="-55.0" prefHeight="350.0" prefWidth="600.0">
                <Label fx:id="labelType" alignment="CENTER" contentDisplay="CENTER" layoutX="138.0" layoutY="-23.0"
                       prefHeight="63.0" prefWidth="320.0" style="-fx-text-fill: white;"
                       text="Введите размер фигуры в целых числах больше 2" textAlignment="CENTER" wrapText="true">
                    <font>
                        <Font name="System Bold" size="17.0"/>
                    </font>
                </Label>
                <Button id="buttonCreateFigure" fx:id="buttonCreateFigure" layoutX="300.0" layoutY="53.0"
                        mnemonicParsing="false" onAction="#buttonCreateFigureOnClick" prefHeight="25.0"
                        prefWidth="115.0" style="-fx-text-fill: white;" styleClass="btn-common" text="Нарисовать"/>
                <Text id="labelNumberOfTasks" fill="WHITE" layoutX="105.0" layoutY="70.0" strokeType="OUTSIDE"
                      strokeWidth="0.0" text="Размер фигуры"/>
                <TextField id="textFieldSizeOfFigure" fx:id="textFieldSizeOfFigure" alignment="CENTER" layoutX="245.0"
                           layoutY="53.0" prefHeight="25.0" prefWidth="37.0" promptText="___" text="2"/>
                <TextArea id="textAreaOutputFigure" fx:id="textAreaOutputFigure" editable="false" layoutX="14.0"
                          layoutY="90.0" prefHeight="246.0" prefWidth="568.0"/>
            </Pane>
        </AnchorPane>
    </center>
    <top>
        <AnchorPane prefHeight="50.0" prefWidth="600.0" style="-fx-background-color: #202020;"
                    BorderPane.alignment="CENTER">
            <MenuBar layoutY="25.0" maxWidth="-Infinity" prefHeight="26.0" prefWidth="260.0"
                     style="-fx-background-color: #202020; -fx-text-fill: white">
                <Menu fx:id="menuLab5" mnemonicParsing="false" style="-fx-text-fill: white;" text="5 лаба"/>
            </MenuBar>
            <AnchorPane layoutX="526.0" layoutY="8.0" prefHeight="35.0" prefWidth="70.0">
                <HBox alignment="TOP_RIGHT" layoutX="-27.0" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="35.0"
                      prefWidth="93.0">
                    <Button mnemonicParsing="false" onMouseClicked="#min" prefHeight="26.0" prefWidth="31.0"
                            style="-fx-text-fill: white;" styleClass="btn-min" text="--">
                        <HBox.margin>
                            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                        </HBox.margin>
                    </Button>
                    <Button mnemonicParsing="false" onMouseClicked="#close" style="-fx-text-fill: white;"
                            styleClass="btn" text="X">
                        <HBox.margin>
                            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                        </HBox.margin>
                    </Button>
                </HBox>
            </AnchorPane>
        </AnchorPane>
    </top>
</BorderPane>
